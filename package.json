{
	"name": "cgaa",
	"version": "1.0.0",
	"description": "Circle Gladiator Army Arena",
	"main": "index.html",
	"scripts": {
		"build": "npm run clean && parcel build index.html --public-url ./ && rm -v ../cgaa-page/dist/* && cp -r ./dist ../cgaa-page && cd ../cgaa-page && git pull && git add -A && git commit -m 'update' && git push",
		"watch": "parcel watch index.html",
		"start": "parcel serve index.html",
		"clean": "rm -v dist/*",
		"ts": "tsc",
		"test": "./node_modules/.bin/mocha --require ts-node/register  \"test/**/*.test.ts\"",
		"graph": "npx depcruise --exclude '^(node_modules)' --output-type dot src | dot -T svg > mingraph.svg",
		"could": "npm run test && npm run ts"
	},
	"author": "Lucca Hellriegel",
	"license": "",
	"dependencies": {
		"@babel/runtime": "^7.7.4",
		"easystarjs": "^0.4.3",
		"lodash": "^4.17.15",
		"phaser": "^3.20.1",
		"polygon-collision": "0.0.1",
		"statsjs": "^1.0.7"
	},
	"devDependencies": {
		"@babel/core": "^7.7.4",
		"@babel/plugin-transform-runtime": "^7.7.4",
		"@babel/preset-env": "^7.7.4",
		"@types/chai": "^4.2.5",
		"@types/mocha": "^5.2.7",
		"chai": "^4.2.0",
		"cssnano": "^4.1.10",
		"dependency-cruiser": "^5.4.0",
		"mocha": "^6.2.2",
		"ts-mockito": "^2.5.0",
		"ts-node": "^8.5.2",
		"tslint": "^5.20.1",
		"typescript": "^3.7.2"
	}
}
